    <script>
        // é¡µé¢å…ƒç´ 
        const opening = document.getElementById('opening');
        const countdownElement = document.getElementById('countdown');
        const mainContent = document.getElementById('mainContent');
        const musicControl = document.getElementById('musicControl');
        const musicIcon = document.getElementById('musicIcon');
        const audio = document.getElementById('birthday-audio');
        const flame = document.getElementById('flame');
        const blowCandleButton = document.getElementById('blowCandle');
        const recipientName = document.getElementById('recipientName');
        
        // ä»URLè·å–å‚æ•°è®¾ç½®æ”¶ä»¶äººåå­—
        function getUrlParams() {
            const params = new URLSearchParams(window.location.search);
            const name = params.get('name') || 'äº²çˆ±çš„æœ‹å‹';
            return { name };
        }
        
        // è®¾ç½®æ”¶ä»¶äººåå­—
        function setRecipientName() {
            const { name } = getUrlParams();
            recipientName.textContent = `äº²çˆ±çš„ ${name}`;
            
            // æ›´æ–°é¡µé¢æ ‡é¢˜
            document.title = `ç”Ÿæ—¥å¿«ä¹ - ${name}`;
        }
        
        // å€’è®¡æ—¶å‡½æ•°
        function startCountdown() {
            let count = 3;
            const countdownInterval = setInterval(() => {
                countdownElement.textContent = count;
                count--;
                
                if (count < 0) {
                    clearInterval(countdownInterval);
                    countdownElement.textContent = "ğŸ‰";
                    
                    // å€’è®¡æ—¶ç»“æŸåæ˜¾ç¤ºæç¤º
                    setTimeout(() => {
                        opening.style.opacity = '0.8';
                    }, 500);
                }
            }, 800);
        }
        
        // å¼€å§‹æ’­æ”¾éŸ³ä¹
        function playMusic() {
            // å¾®ä¿¡å†…éœ€è¦ç”¨æˆ·äº¤äº’æ‰èƒ½æ’­æ”¾éŸ³é¢‘
            audio.play().then(() => {
                console.log("éŸ³ä¹å¼€å§‹æ’­æ”¾");
                musicIcon.className = "fas fa-volume-up";
            }).catch(error => {
                console.log("è‡ªåŠ¨æ’­æ”¾å¤±è´¥ï¼Œéœ€è¦ç”¨æˆ·äº¤äº’", error);
                musicIcon.className = "fas fa-volume-mute";
            });
        }
        
        // åˆ‡æ¢éŸ³ä¹æ’­æ”¾çŠ¶æ€
        function toggleMusic() {
            if (audio.paused) {
                audio.play();
                musicIcon.className = "fas fa-volume-up";
            } else {
                audio.pause();
                musicIcon.className = "fas fa-volume-mute";
            }
        }
        
        // å¹èœ¡çƒ›å‡½æ•°
        function blowCandle() {
            // èœ¡çƒ›ç«ç„°åŠ¨ç”»
            flame.style.animation = 'none';
            flame.style.opacity = '0';
            flame.style.transform = 'scale(0.5)';
            
            // æ˜¾ç¤ºè®¸æ„¿æ–‡å­—
            blowCandleButton.textContent = "âœ¨ æ„¿æœ›å·²é€è¾¾ âœ¨";
            blowCandleButton.style.background = "linear-gradient(to right, #4caf50, #2e7d32)";
            
            // æ·»åŠ ç¥ç¦ç‰¹æ•ˆ
            const messageContainer = document.querySelector('.message-container');
            const wishText = document.createElement('div');
            wishText.className = 'birthday-message';
            wishText.innerHTML = `<p style="color:#d81b60; font-weight:bold; margin-top:15px;">ğŸ‰ æ„¿ä½ çš„æ„¿æœ›å…¨éƒ¨å®ç°ï¼ ğŸ‰</p>`;
            messageContainer.appendChild(wishText);
            
            // 3ç§’åæ¢å¤æŒ‰é’®
            setTimeout(() => {
                blowCandleButton.textContent = "ğŸ‚ å†æ¬¡è®¸æ„¿ ğŸ•¯ï¸";
                blowCandleButton.style.background = "linear-gradient(to right, #ff4081, #7b1fa2)";
                flame.style.animation = 'flicker 0.5s infinite alternate';
                flame.style.opacity = '1';
                flame.style.transform = 'scale(1)';
            }, 3000);
        }
        
        // é¡µé¢åˆå§‹åŒ–
        function init() {
            setRecipientName();
            startCountdown();
            
            // ç‚¹å‡»å¼€åœºç”»é¢å¼€å§‹
            opening.addEventListener('click', function() {
                opening.style.opacity = '0';
                
                setTimeout(() => {
                    opening.style.display = 'none';
                    mainContent.style.display = 'block';
                    
                    setTimeout(() => {
                        mainContent.style.opacity = '1';
                        // å°è¯•æ’­æ”¾éŸ³ä¹
                        playMusic();
                    }, 300);
                }, 800);
            });
            
            // éŸ³ä¹æ§åˆ¶æŒ‰é’®
            musicControl.addEventListener('click', toggleMusic);
            
            // å¹èœ¡çƒ›æŒ‰é’®
            blowCandleButton.addEventListener('click', blowCandle);
            
            // å¾®ä¿¡å†…è‡ªåŠ¨æ’­æ”¾éŸ³ä¹å¤„ç†
            document.addEventListener('WeixinJSBridgeReady', function() {
                playMusic();
            }, false);
            
            // å…¶ä»–æµè§ˆå™¨å¤„ç†
            document.addEventListener('touchstart', function firstTouch() {
                playMusic();
                document.removeEventListener('touchstart', firstTouch, false);
            }, false);
        }
        
        // é¡µé¢åŠ è½½å®Œæˆååˆå§‹åŒ–
        window.addEventListener('DOMContentLoaded', init);
    </script>
